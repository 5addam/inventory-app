extends layout 
block content 
    h1=title 

    .card.container 
        .card-header Are you sure you want to delete this category?
        .card-body 
            .card-title #{category.name}
            if category_products.length > 0
                p.card-text All these products associated with the category will also be deleted.
                each product in category_products
                    div.card(style='width: 18rem;')
                        img.card-img-top(src=product.image_url alt="product-img")
                        div.card-body
                            h5.card-title #{product.model}
                        ul.list-group.list-group-flush 
                            li.list-group-item Brand: #{product.brand.name}
                            li.list-group-item Price: Rs.#{product.price}
                        div.card-body
                            a.card-link(href=product.url) View Details
            form(method='POST' action='')
                div.form-group
                    input(type='hidden' name='categoryId' value=category._id required='true')
                div.d-products.btns
                    button.btn.btn-primary(type=submit style='margin:10px') Yes 
                    a.btn.btn-primary.ml-5(href=category.url style='margin:10px') No