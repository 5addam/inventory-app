extends layout 
block content 
    h1=title 

    .card.container 
        .card-header Are you sure you want to delete this brand?
        .card-body 
            .card-title #{brand.name}
            if brand_products.length > 0
                p.card-text All these products associated with the brand will also be deleted.
                each product in brand_products
                    div.card(style='width: 18rem;')
                        img.card-img-top(src=product.image_url alt="product-img")
                        div.card-body
                            h5.card-title #{product.model}
                        ul.list-group.list-group-flush 
                            li.list-group-item Brand: #{product.brand.name}
                            li.list-group-item Price: Rs.#{product.price}
                        div.card-body
                            a.card-link(href=product.url) View Details
            form(method='POST' action='')
                div.form-group
                    input(type='hidden' name='brandId' value=brand._id required='true')
                div.d-products.btns
                    button.btn.btn-primary(type=submit style='margin:10px') Yes 
                    a.btn.btn-primary.ml-5(href=brand.url style='margin:10px') No